<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/atleta_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:textIsSelectable="true"
        tools:context="com.taniafontcuberta.basketball.controller.activities.master_detail.AtletaDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/atleta_nombre"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:textIsSelectable="true"
        tools:context="com.example.basketball.controller.activities.master_detail.AtletaDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/atleta_apellidos"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:textIsSelectable="true"
        tools:context="com.example.basketball.controller.activities.master_detail.AtletaDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/atleta_nacionalidad"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:textIsSelectable="true"
        tools:context="com.example.basketball.controller.activities.master_detail.AtletaDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/atleta_fechaNacimiento"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:textIsSelectable="true"
        tools:context="com.example.basketball.controller.activities.master_detail.AtletaDetailFragment" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/atleta_medalla"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:textIsSelectable="true"
        tools:context="com.example.basketball.controller.activities.master_detail.AtletaDetailFragment" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="ELIMINAR ATLETA"/>


</LinearLayout>